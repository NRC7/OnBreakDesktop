                    <SkewTransform AngleX="2.088"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.401"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox x:Name="txtAsistentes" IsEnabled="True" HorizontalAlignment="Left" Height="35" Controls:TextBoxHelper.ClearTextButton="True"
